    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="GameDB.db" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="GameDB.db">
